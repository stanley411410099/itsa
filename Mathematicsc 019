#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <ctype.h>

int main(){
    float a;
    scanf("%f",&a);
    if(a<=800){
        printf("%.1f\n",a*0.9);
    } 
    else if(800<a && a<1500){
        printf("%.1f\n",a*0.9*0.9);
    }
    else{
        printf("%.1f\n",a*0.9*0.79);
    }
    
}
